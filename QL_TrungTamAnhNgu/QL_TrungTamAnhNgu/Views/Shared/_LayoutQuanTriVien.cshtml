                            <span style="font-size: 16px;">Quản lý Ưu đãi</span>
                        </a>
                    </div>
                    <div style="margin-bottom: 25px;">
                        <a href="/Admin/DashBoard" style="color: black; display: flex; align-items: center; column-gap: 8px;" class="nav__link">
                            <img src="~/Content/QuanTriVien/iconSideBar5.png" alt="icon dashboard" style="width: 20px; height: 20px;" />
                            <span style="font-size: 16px;">Quản lý Thanh toán</span>
                        </a>
                    </div>
                </div>
            </div>
            <div style="display: flex; align-items: center; column-gap: 8px; position: absolute; bottom: 0; left: 0; padding: 8px; border-top: 1px solid #edede9; width: 100%;">
                <img src="~/Content/QuanTriVien/avatar.jpg" alt="Alternate Text" style="width: 40px; height: 40px; border-radius: 999px;" />
                <div>
                    <span style="display: block; font-size: 16px; font-weight: 500;">
                        @*@if (Session["user"] != null)
                        {
                            NguoiDung user = Session["user"] as NguoiDung;
                            <span>@user.TenDangNhap</span>
                        }*@
                </span>
            </div>
        </div>
    </div>
    <div style="width: 84%; background-color: #f3f4f6;">
        @RenderBody()
    </div>
</div>
<script src="~/Content/QuanTriVien/QuanTriVienJS.js"></script>
