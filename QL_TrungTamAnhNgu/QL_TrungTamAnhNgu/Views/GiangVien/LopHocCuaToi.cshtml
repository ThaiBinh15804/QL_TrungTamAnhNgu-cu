@model IEnumerable<QL_TrungTamAnhNgu.Models.LopHoc>

@{
    ViewBag.Title = "Lớp Học Của Tôi";
    Layout = "~/Views/Shared/_LayoutGiangVien.cshtml";
}

<div class="container mt-4">
    <h2 class="text-center mb-4">Danh Sách Lớp Học Của Tôi</h2>
    <p class="text-muted text-center">Dưới đây là thông tin về các lớp học bạn đang phụ trách.</p>

    <table class="table table-bordered table-hover shadow-sm mt-3">
        <thead class="table-light">
            <tr>
                <th>Tên Lớp</th>
                <th>Thuộc Khóa Học</th>
                <th>Phòng Dạy</th>
                <th>Ngày Bắt Đầu</th>
                <th>Ngày Kết Thúc</th>
                <th>Trạng Thái</th>
                <th>Số Tiết Học</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
{
                <tr onclick="window.location='@Url.Action("ChiTietLopHoc", "LopHoc", new { malop = item.MaLop })';" style="cursor: pointer;" >
                    <td>@Html.DisplayFor(modelItem => item.TenLop)</td>
                    <td>@Html.DisplayFor(modelItem => item.KhoaHoc.TenKhoaHoc)</td>
                    <td>@Html.DisplayFor(modelItem => item.PhongHoc.TenPhong)</td>
                    <td>@item.NgayBatDau.ToString("dd/MM/yyyy")</td>
                    <td>@item.NgayKetThuc.ToString("dd/MM/yyyy")</td>
                    <td>
                        <span class="badge @(item.TrangThai == "Đang hoạt động" ? "bg-success" : "bg-secondary")">
                            @Html.DisplayFor(modelItem => item.TrangThai)
                        </span>
                    </td>
                    <td>@Html.DisplayFor(modelItem => item.ThoiLuong) giờ</td>

                </tr>
}
        </tbody>
    </table>
</div>
